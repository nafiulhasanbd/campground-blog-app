<% include partials/header %>

<title>Campground</title>


<div class="container">
<header class="jumbotron text-center">
        <div class="container">
            <h1>Welcome to our CampGraound page</h1>
            <p>View our hand picked campground from all over the world</p>
            <a class="btn btn-primary btn-large" href="/campgrounds/new">New CampGraound</a><br>
        </div>
    </header>
</div>

<hr>


<div class="container">
    <div class="row">
       <% campgrounds.forEach(function(campground){ %>
        <div class="col-md-3 center">
           <div class="thumbnail">
            <a href="#"><img src="<%= campground.image %>" alt=""></a>
            <h4><%= campground.name %></h4>
            <p><a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">Show more</a></p>
            </div>
        </div>
              <% }); %> 
    </div>
</div>

























