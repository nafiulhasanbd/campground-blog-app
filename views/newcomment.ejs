<% include partials/header %>



<div class="container">
    <header>
        <h1 style="text-align:center">Add New Comment to <%= campground.name %></h1>
    </header>
</div>

<hr>


<div class="container">
    <form action="/campgrounds/<%= campground._id %>/comments" method="POST">
        <div class="form-group">
            <input type="text" class="form-control" name="comment[text]" placeholder="Type your comment">
        </div>
        <div class="form-group">
            <input type="text" class="form-control" name="comment[author]" placeholder="Your name">
        </div>
        <div class="form-group">
            <input type="submit" value="Add Comment" class="btn btn-lg btn-primary">
        </div>
    </form>
</div>
























